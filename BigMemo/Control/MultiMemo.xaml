<UserControl x:Class="BigMemo.MultiMemo"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:BigMemo"
             mc:Ignorable="d" 
             d:DesignHeight="1000" 
             d:DesignWidth="1550">
    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="../Resources/Resources.xaml"/>
                <ResourceDictionary Source="MultiMemoResources.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </UserControl.Resources>
    <Grid>
        <ScrollViewer x:Name="ItemViewer" VerticalScrollBarVisibility="Visible">
            <StackPanel Orientation="Vertical">
                <TextBox Height="400" Style="{StaticResource MemoTextBox}"></TextBox>
                <TextBox Height="400" Style="{StaticResource MemoTextBox}"></TextBox>
                <TextBox Height="400" Style="{StaticResource MemoTextBox}"></TextBox>
                <TextBox Height="400" Style="{StaticResource MemoTextBox}"></TextBox>
            </StackPanel>
        </ScrollViewer>
    </Grid>
</UserControl>
